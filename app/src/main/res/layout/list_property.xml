<?xml version="1.0" encoding="utf-8"?>

     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
         android:background="@drawable/b"
    android:orientation="vertical" >
<TextView
        android:id="@+id/Head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Select Property To List"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/list_society"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="List Society Flats"
        android:textColor="#000" />

    <Button
        android:id="@+id/list_housingBoard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="List HousingBoard Flats"
        android:textColor="#000" />

    <Button
        android:id="@+id/list_kothi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="List kothis"
        android:textColor="#000" />
    
    <Button
        android:id="@+id/list_sco"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="List SCO"
        android:textColor="#000" />

        <Button
            android:id="@+id/list_booth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="List Booths"
            android:textColor="#000" />

</LinearLayout>